{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp.ReverseProxy": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "auth-service-route": {
        "ClusterId": "auth-service-cluster",
        "Match": {
          "Path": "/auth/{**remainder}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/auth"
          }
        ]
      },
      "swagger-route": {
        "ClusterId": "auth-service-cluster",
        "Match": {
          "Path": "/{**remainder}"
        }
      }
    },
    "Clusters": {
      "auth-service-cluster": {
        "Destinations": {
          "auth-service": {
            "Address": "http://authservice:80"
          }
        }
      }
    }
  }
}