{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp.ReverseProxy": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "auth-register": {
        "ClusterId": "auth-service-cluster",
        "Match": {
          "Path": "/register",
          "Methods": [ "POST" ]
        },
        "Transforms": [
          { "PathPattern": "/api/Auth/register" }
        ]
      },
      "auth-loginByEmail": {
        "ClusterId": "auth-service-cluster",
        "Match": {
          "Path": "/login_email",
          "Methods": [ "POST" ]
        },
        "Transforms": [
          { "PathPattern": "/api/Auth/loginbyemail" }
        ]
      },
      "auth-loginByName": {
        "ClusterId": "auth-service-cluster",
        "Match": {
          "Path": "/login_name",
          "Methods": [ "POST" ]
        },
        "Transforms": [
          { "PathPattern": "/api/Auth/loginbyname" }
        ]
      },
      "swagger-route": {
        "ClusterId": "auth-service-cluster",
        "Match": {
          "Path": "/{**remainder}",
          "Methods": [ "GET" ]
        }
      }
    },
    "Clusters": {
      "auth-service-cluster": {
        "Destinations": {
          "auth-service": {
            "Address": "http://authservice:80"
          }
        }
      }
    }
  }
}