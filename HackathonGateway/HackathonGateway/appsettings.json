{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp.ReverseProxy": "Information"
    }
  },
  "AllowedHosts": "*",
  "AllowedOrigins": [
    "http://localhost:3010",
    "http://localhost:3000",
    "http://authservicefrontend",
    "http://frontend"
  ],
  "ReverseProxy": {
    "Routes": {
      "auth-register": {
        "ClusterId": "auth-service-cluster",
        "Match": {
          "Path": "/register",
          "Methods": [
            "POST"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "/api/Auth/register"
          }
        ]
      },
      "auth-loginByEmail": {
        "ClusterId": "auth-service-cluster",
        "Match": {
          "Path": "/loginByEmail",
          "Methods": [
            "POST"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "/api/Auth/loginbyemail"
          }
        ]
      },
      "auth-loginByName": {
        "ClusterId": "auth-service-cluster",
        "Match": {
          "Path": "/login_name",
          "Methods": [
            "POST"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "/api/Auth/loginbyname"
          }
        ]
      },
      "auth-login-google": {
        "ClusterId": "auth-service-cluster",
        "Match": {
          "Path": "/google-login",
          "Methods": [ "GET" ]
        },
        "Transforms": [
          {
            "PathPattern": "/api/Auth/google-login"
          }
        ]
      },
      "auth-google-callback": { 
        "ClusterId": "auth-service-cluster",
        "Match": {
          "Path": "/signin-google",
          "Methods": [ "GET" ]
        },
        "Transforms": [
          { "PathPattern": "/signin-google" }
        ]
      },
      "sound-download-route": {
        "ClusterId": "sound-service-cluster",
        "AuthorizationPolicy": "UserOrAdminAccess",
        "Match": {
          "Path": "/download",
          "Methods": [
            "GET"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "/api/Audio/download"
          }
        ]
      },
      "sound-upload-route": {
        "ClusterId": "sound-service-cluster",
        "AuthorizationPolicy": "AdminOnly",
        "Match": {
          "Path": "/upload",
          "Methods": [
            "POST"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "/api/Audio/upload"
          }
        ]
      },
      "sound-getalltracks-route": {
        "ClusterId": "sound-service-cluster",
        "AuthorizationPolicy": "UserOrAdminAccess",
        "Match": {
          "Path": "/tracks",
          "Methods": [
            "GET"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "/api/Audio/tracks"
          }
        ]
      },
      "sound-gettrackbyid-route": {
        "ClusterId": "sound-service-cluster",
        "AuthorizationPolicy": "UserOrAdminAccess",
        "Match": {
          "Path": "/track/{id}",
          "Methods": [
            "GET"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "/api/Audio/track/{id}"
          }
        ]
      },
      "sound-gettracktextbyid-route": {
        "ClusterId": "sound-service-cluster",
        "AuthorizationPolicy": "UserOrAdminAccess",
        "Match": {
          "Path": "/track_text/{id}",
          "Methods": [
            "GET"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "/api/Audio/track_text/{id}"
          }
        ]
      },

      "swagger-route": {
        "ClusterId": "auth-service-cluster",
        "Match": {
          "Path": "/{**remainder}",
          "Methods": [
            "GET"
          ]
        }
      }
    },
    "Clusters": {
      "auth-service-cluster": {
        "Destinations": {
          "auth-service": {
            "Address": "https://authservice:443"
          }
        },
        "HttpClient": {
          "DangerousAcceptAnyServerCertificate": true
        }
      },
      "sound-service-cluster": {
        "Destinations": {
          "sound-service": {
            "Address": "http://soundservice:80"
          }
        }
      }
    }
  }
}